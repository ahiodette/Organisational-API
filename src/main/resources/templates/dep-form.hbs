{{#partial "content"}}

    <form action="/depts" method="post">
        <div class="form-group">

            <label for="depName">Department name</label>
            <input id="depName" name="depName">
        </div>
        <div class="form-group">
            <label for="depDescr">Description</label>
            <input type="text" name="depDescr" class="form-group">
        </div>
        <div class="form-group">
            <label for="depSize">Number of employees</label>
            <input type="number" id="depSize" name="depSize">
        </div>
        <div>
            <button type="submit" id="btn">Submit</button>
        </div>
    </form>
    {{/partial}}

{{>layout.hbs}}