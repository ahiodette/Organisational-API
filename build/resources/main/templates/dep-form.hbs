{{#partial "content"}}
<div class="container text-center" style="font-size:50px;">
    <h2 style="font-size:50px;">ADD NEW DEPARTMENT</h2>
    <hr>


    <form action="/departments" method="post" >
        <div class="form-group">

            <label for="depname">Department name</label>
            <input id="depname" name="depname">
        </div>
        <div class="form-group">
            <label for="depdescr">Description</label>
            <input type="text" name="depdescr" class="form-group">
        </div>
        <div class="form-group">
            <label for="depsize">Number of employees</label>
            <input type="number" id="depsize" name="depsize">
        </div>
        <div>
            <button class="btn-primary" type="submit" id="btn">Submit</button>
        </div>
    </form><br>
    <a class="btn btn-primary stretched-link" href="/">BACK</a><br><br>
</div>
    {{/partial}}

{{>layout.hbs}}